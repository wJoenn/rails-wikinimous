<div id="show">
  <div class="show-title">
    <h1><%= @article.title %></h1>

    <%= link_to edit_article_path(@article.id) do%>
      <i class="fa-solid fa-pencil"></i>
    <% end %>

    <%= link_to article_path(@article.id), data: { turbo_method: :delete } do%>
      <i class="fa-solid fa-trash-can"></i>
    <% end %>
  </div>
  <p><%= @article.content %></p>
</div>
